#notification
  - if notice.present?
    .position-fixed.top-0.end-0.p-3{style: 'z-index: 3999;' }
      .toast.show.fade.text-white.bg-success.shadow-lg.rounded-3{role: "alert", 'aria-live': "assertive", 'aria-atomic': "true"}
        .toast-body.d-flex.justify-content-between.align-items-center
          = notice
          %button.btn-close{ type: 'button', 'data-bs-dismiss': 'toast', 'aria-label': 'Close' }

  - if alert.present?
    .position-fixed.top-0.end-0.p-3{  style: 'z-index: 3999;' }
      .toast.show.fade.text-white.bg-danger.shadow-lg.rounded-3{role: "alert", 'aria-live': "assertive", 'aria-atomic': "true"}
        .toast-body.d-flex.justify-content-between.align-items-center
          = alert
          %button.btn-close{ type: 'button', 'data-bs-dismiss': 'toast', 'aria-label': 'Close' }